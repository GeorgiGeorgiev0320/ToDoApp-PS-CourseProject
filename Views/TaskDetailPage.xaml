<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Views.TaskDetailPage"
             Title="Task Details">
    <StackLayout Padding="20">
        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="Large" />
        <Label Text="{Binding Description}" FontSize="Medium" />
        <Label Text="{Binding DueDate, StringFormat='Due: {0:yyyy-MM-dd}'}" FontSize="Small" />
        <CheckBox IsChecked="{Binding IsCompleted}" />
    </StackLayout>
</ContentPage>